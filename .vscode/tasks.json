{
    "tasks": [
        {
            "type": "shell",
            "label": "create-build-directory",
            "command": "mkdir -p ${workspaceFolder}/build/${fileBasenameNoExtension}"
        },
        {
            "type": "cppbuild",
            "label": "build-active-cpp",
            "dependsOn": ["create-build-directory"],
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-fdiagnostics-color=always",
                "-DGL_SILENCE_DEPRECATION",
                "-Wall",
                "-I${workspaceFolder}/libs",
                "-I${workspaceFolder}/src/classes",
                "-L${workspaceFolder}/libs",
                "-lGLEW",
                "-lglfw3",
                "-g",
                "${file}",
                "${workspaceFolder}/src/classes/**/*.cpp",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}/${fileBasenameNoExtension}",
                "-framework",
                "OpenGL",
                "-framework",
                "IOKit",
                "-framework",
                "Cocoa",
                "-framework",
                "CoreVideo"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "build-application",
            "dependsOn": ["create-build-directory"],
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-fdiagnostics-color=always",
                "-DGL_SILENCE_DEPRECATION",
                "-Wall",
                "-I${workspaceFolder}/libs",
                "-I${workspaceFolder}/src/classes",
                "-L${workspaceFolder}/libs",
                "-lGLEW",
                "-lglfw3",
                "-g",
                "${workspaceFolder}/src/Application.cpp",
                "${workspaceFolder}/src/classes/**/*.cpp",
                "-o",
                "${workspaceFolder}/build/Application",
                "-framework",
                "OpenGL",
                "-framework",
                "IOKit",
                "-framework",
                "Cocoa",
                "-framework",
                "CoreVideo"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
